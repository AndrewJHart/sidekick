@import 'jeet/framework'
@import 'jeet/elements'
@import 'jeet/typography'


html
    background #fff


[data-type=page]
    header
        display table
        width 100%
        text-align center
        background linear-gradient(top, lighten(primary_color, 15%), darken(primary_color, 5%))
        color #fff
        padding 15px
        text-shadow 0 2px 1px darken(primary_color, 50%)
        > div, h1
            display table-cell
            vertical-align middle
            padding 5px
        > div
            width 25%
            font-size 22px
        h1
            width 50%
            font-size 32px
            padding 0 15px
            line-height 1.2
        a
            color #fff
            text-decoration none
        [data-type=btn], [data-type=menu] button
            width 100%
            color #fff
            line-height 1.5
            display block
            padding 10px
            background linear-gradient(top, darken(primary_color, 10%), darken(primary_color, 30%))
            border-radius 10px
            border 0
            border-top 1px solid lighten(primary_color, 30%)
            border-bottom 1px solid darken(primary_color, 35%)
            &:hover, &:active
                background linear-gradient(top, lighten(primary_color, 5%), darken(primary_color, 25%))
                border-top-color lighten(primary_color, 45%)
                border-bottom-color darken(primary_color, 25%)
                text-shadow 0 2px 1px darken(primary_color, 70%)
        [data-type=menu]
            position relative
            div
                display none
                position absolute
                top 100%
                background #fff
                width 100%
                a
                    color primary_color
                    text-shadow none
                    display block
                    border 1px solid lighten(primary_color, 80%)
                    border-top 0
                    padding 10px 15px
                    &:hover
                        background #f5f5f5
            &:hover
                div
                    display block
                button
                    border-radius bottom 0
                    background linear-gradient(top, lighten(primary_color, 5%), darken(primary_color, 25%))
                    border-top-color lighten(primary_color, 45%)
                    border-bottom-color darken(primary_color, 25%)
                    text-shadow 0 2px 1px darken(primary_color, 70%)